@page
@model HE176084_MinhBT_A3.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get">
    <div class="form-group">
        <label for="searchInput">Search:</label>
        <input type="text" id="searchInput" name="searchInput" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].PublishStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].AuthorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].CategoryID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Post)
        {
            if (string.IsNullOrEmpty(Request.Query["searchInput"]) ||
                item.Title.Contains(Request.Query["searchInput"], StringComparison.OrdinalIgnoreCase) ||
                item.Content.Contains(Request.Query["searchInput"], StringComparison.OrdinalIgnoreCase) ||
                item.PostID.ToString().Equals(Request.Query["searchInput"], StringComparison.OrdinalIgnoreCase))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryID)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PostID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.PostID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.PostID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
